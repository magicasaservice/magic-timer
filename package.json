{
  "name": "@maas/magic-timer",
  "description": "Event based timer for Node.js and the browser",
  "version": "1.0.1",
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/magicasaservice/magic-timer/"
  },
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.js"
    },
    "./types": "./dist/index.d.mts"
  },
  "files": [
    "dist"
  ],
  "main": "dist/index.mjs",
  "types": "dist/index.d.mts",
  "scripts": {
